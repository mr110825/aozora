<!--検索フォーム---->
<%= search_form_for @search do |f| %>
  <%= f.search_field :title_cont %>
  <div class="actions"><%= f.submit "検索" %></div>
<% end %>

<!--検索結果-->
<% @books.each do |book| %>
    <%= book.id %>  <br>
    <%= book.title %>  <br>
    <%= book.content %>
    <p><%= link_to 'content', book_path(book) %></p>
<% end %>